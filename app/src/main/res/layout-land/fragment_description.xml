<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.jamessmith.marvelcomics.comics.ComicsFragment">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="18dp"
        android:textAlignment="center"
        android:id="@+id/tv_desc_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/iv_desc_image"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:layout_width="554dp"
        android:layout_height="wrap_content"
        android:text="description"
        android:maxLines = "4"
        android:scrollbars = "vertical"
        app:layout_constraintTop_toBottomOf="@+id/iv_desc_image"
        android:id="@+id/tv_desc_description"
        android:layout_marginTop="38dp"
        android:layout_marginLeft="19dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:id="@+id/tv_desc_author"
        app:layout_constraintLeft_toRightOf="@+id/iv_desc_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_title"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_desc_price"
        android:text="price"
        app:layout_constraintLeft_toRightOf="@+id/iv_desc_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_page_count"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="39dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pagecount"
        android:id="@+id/tv_desc_page_count"
        app:layout_constraintLeft_toRightOf="@+id/iv_desc_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_author"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="35dp" />

    <ImageView
        android:id="@+id/iv_desc_image"
        android:layout_width="336dp"
        android:layout_height="189dp"
        android:minHeight="100dp"
        android:minWidth="100dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_title"
        android:layout_marginTop="113dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>