<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.jamessmith.marvelcomics.comics.ComicsFragment">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="18dp"
        android:textAlignment="center"
        android:id="@+id/tv_desc_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/iv_desc_image"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="-22dp" />

    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="description"
        android:textSize="15dp"
        android:maxLines = "5"
        android:scrollbars = "vertical"
        app:layout_constraintTop_toBottomOf="@+id/iv_desc_image"
        android:id="@+id/tv_desc_description"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:textSize="15dp"
        android:id="@+id/tv_desc_author"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="82dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_desc_price"
        android:text="price"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_description"
        app:layout_constraintLeft_toRightOf="@+id/tv_desc_page_count"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="134dp"
        android:layout_marginTop="82dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pagecount"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_description"
        app:layout_constraintLeft_toRightOf="@+id/tv_desc_author"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/tv_desc_page_count"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="82dp"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_desc_image"
        android:layout_width="380dp"
        android:layout_height="332dp"
        android:minHeight="100dp"
        android:minWidth="100dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_title"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="52dp"
        android:layout_marginLeft="-382dp" />

</android.support.constraint.ConstraintLayout>