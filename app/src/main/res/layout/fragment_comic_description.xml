<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.jamessmith.marvelcomics.comics.ComicsFragment">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="title"
        android:textAlignment="center"
        android:id="@+id/tv_desc_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/iv_desc_image"
        tools:layout_editor_absoluteY="50dp"
        app:layout_constraintHorizontal_bias="1.0" />

    <TextView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="description"
        android:maxLines = "4"
        android:scrollbars = "vertical"
        app:layout_constraintTop_toBottomOf="@+id/iv_desc_image"
        android:id="@+id/tv_desc_description"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:id="@+id/tv_desc_author"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_description"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="82dp"
        android:layout_marginStart="16dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_desc_price"
        android:text="price"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_description"
        app:layout_constraintLeft_toRightOf="@+id/tv_desc_page_count"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="82dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pagecount"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_description"
        app:layout_constraintLeft_toRightOf="@+id/tv_desc_author"
        android:id="@+id/tv_desc_page_count"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="82dp"
        android:layout_marginStart="45dp" />

    <ImageView
        android:id="@+id/iv_desc_image"
        android:layout_width="395dp"
        android:layout_height="269dp"
        android:maxHeight="269dp"
        android:maxWidth="269dp"
        android:minHeight="100dp"
        android:minWidth="100dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_title"
        app:layout_constraintLeft_toRightOf="parent"
        android:layout_marginTop="9dp" />

</android.support.constraint.ConstraintLayout>