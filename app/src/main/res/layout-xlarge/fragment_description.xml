<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.jamessmith.marvelcomics.comics.ComicsFragment">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="title"
        android:textSize="30dp"
        android:textAlignment="center"
        android:id="@+id/tv_desc_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <TextView
        android:layout_width="768dp"
        android:layout_height="wrap_content"
        android:text="description"
        android:textSize="25dp"
        android:maxLines = "12"
        android:scrollbars = "vertical"
        app:layout_constraintTop_toBottomOf="@+id/iv_desc_image"
        android:id="@+id/tv_desc_description"
        android:layout_marginTop="54dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Author"
        android:id="@+id/tv_desc_author"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_title"
        app:layout_constraintLeft_toRightOf="@+id/iv_desc_image"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="62dp"
        android:layout_marginStart="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_desc_price"
        android:text="price"
        android:textSize="25dp"
        android:layout_marginTop="54dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_page_count"
        app:layout_constraintLeft_toRightOf="@+id/iv_desc_image"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_desc_page_count"
        android:text="pagecount"
        android:textSize="25dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_author"
        app:layout_constraintLeft_toRightOf="@+id/iv_desc_image"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp" />

    <ImageView
        android:id="@+id/iv_desc_image"
        android:layout_width="300dp"
        android:layout_height="363dp"
        android:maxHeight="450dp"
        android:maxWidth="450dp"
        android:minHeight="300dp"
        android:minWidth="300dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_desc_title"
        android:layout_marginTop="60dp" />

</android.support.constraint.ConstraintLayout>